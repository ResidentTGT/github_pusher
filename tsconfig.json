{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"lib": ["es6", "dom"],
		"allowJs": true,
		"outDir": "./build",
		"rootDir": "./src",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": false,
		"sourceMap": true
	}
}
